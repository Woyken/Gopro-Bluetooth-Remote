{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["xo", "prettier"],
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["*.ts", "*.tsx"]
		},
		{
			"files": ["*.ts", "*.tsx"],
			"rules": {
				"@typescript-eslint/indent": "off", // This rule works strange with multiline generics, disabling for now
				"@typescript-eslint/array-type": "off"
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {}
}
